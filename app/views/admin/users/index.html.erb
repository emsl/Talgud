<h1><%= t('.title') %></h1>

<div class="textcontent">
  <%= link_to t('.add_user'), new_admin_user_path %>
</div>

<div class="datacontent">
  <table class="datatable">
  <thead>
  <tr>
    <th><%= t('formtastic.labels.user.name') %></th>
    <th><%= t('formtastic.labels.user.email') %></th>
    <th><%= t('formtastic.labels.user.phone') %></th>
    <th><%= t('formtastic.labels.user.status') %></th>
    <th></th>
  </tr>
  </thead>
  <% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.phone %></td>
    <td><%=h t("formtastic.labels.user.statuses.#{user.status}") %></td>
    
    <td class="actions">
      <% if permitted_to?(:read, :admin_users) %>
      <%= link_to t('admin.common.view'), admin_user_path(user) %>
      <% end %>
      <% if permitted_to?(:edit, :admin_users) %>
      <%= link_to t('admin.common.edit'), edit_admin_user_path(user) %>
      <% end %>
    </td>
  </tr>
  <% end %>
  </table>
  <%= paginate %>
</div>
