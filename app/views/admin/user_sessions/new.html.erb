<div id="fci-login">
  <h1>Logi sisse</h1>

  <div id="fci-login-top">
    <%= print_flash %>
  </div>

  <%- form_for @user_session, :url => admin_user_sessions_path do |f| -%>
    <%= f.label :email, t('.email') %>
    <%= f.text_field :email, :class => "textfield" %><br />

    <%= f.label :password, t('.password') %>
    <%= f.password_field :password, :class => "textfield" %><br />

    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, t('.remember_me') %><br /><br />

    <%= submit_tag t('.login_submit') %>
  <%- end -%> 
</div>
