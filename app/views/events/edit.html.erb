<div class="container-left">
  <%= render 'submenu' %>
  <%= render 'events/submenu_edit' if permitted_to?(:edit, @event) %>
</div>
<div class="container-right">
  <h1><%= t('.title') %></h1>

  <% semantic_form_for @event do |f| %>
    <%= render 'form' %>
    
    <div class="submit-container round">
      <% f.buttons do %>
        <%= f.submit t('formtastic.labels.event.actions.submit'), :class => 'submit' %>
      <% end %>
    </div>
  <% end %>
</div>
